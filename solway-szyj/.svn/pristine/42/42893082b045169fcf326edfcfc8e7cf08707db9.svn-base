<script>
	if(isAndroid){//判断安卓，修改顶部样式
		$("#distUserNav").addClass("m-t-none");
	}
	$(".rollDiv").css("height",$(window).height()-150)

	app.controller('staMonCtrl',function($scope, $http, $state,$rootScope) {
			$scope.getstaDayPowerData=function(nowData){
				$http({
					method : "POST",
					url : ctx+"MobileHmDeviceMonitor/getAccumulateChartGeneratingPower.htm",
					params : {
						'userId':1,
						//'dateString':$scope.mapTimeMonth,
						'powerStationId':JSON.parse(storage["powerStationId"])
					}
					})
					.success(function (msg) {
						$("#kwhTotalYReport").height((msg.echarts_xaxisTime.length)*100+30)
						$("#kwhTotalYReport").width($(window).width())
						powerAnalyze((msg.echarts_xaxisTime).reverse(),
								(msg.echarts_realGeneratingPower).reverse(),
								(msg.echarts_predictGeneratingPower).reverse(),
								(msg.echarts_generatingPowerHours).reverse(),$http, $scope)
					}).error(function(msg){
					});
			
			}
			$scope.getstaDayPowerData()
	});
	function powerAnalyze(echarts_xaxisTime,echarts_realGeneratingPower,echarts_predictGeneratingPower,echarts_generatingPowerHours,$http, $scope){
		var myChart = echarts.init(document.getElementById('kwhTotalYReport'));
		window.addEventListener("resize", function() {
			myChart.resize();
		});
		option = {
			  	 tooltip : {
			        trigger: 'axis',
			  	 	  formatter: function (params,ticket,callback) {
			            var res ="";
			            for (var i = 0, l = params.length; i < l; i++) {
			            	res += params[i].seriesName+" : "+params[i].value +"<br/>" ;
			            }
			            return res;
			      }, 
			      axisPointer:{
						 type: 'line',
						    lineStyle: {
						        color: '#bbb',
						        width: 1,
						        type: 'solid'
						    }
					 }
			    },
			    grid : {
			    	borderWidth : 1,
			    	x : '40px',
					x2 : '30px',
					y : "30px",
					y2 : "30px",
					borderColor:'rgba(144, 168, 252,0.1)'
				},
				calculable : false,
				yAxis : [ {
					font : {
						color : '#fff'
					},
					position : 'left',//X 轴显示的方位
					type : 'category',
					 axisTick : {
							show : false
						},
					axisLabel : {
					   margin:20,
						textStyle : {
							align : 'center',
							color : 'rgba(144, 168, 252,0.4)',
							fontSize : 13
						}
					},
					axisLine : {
						lineStyle : {
							color : 'transparent'
						}
					},
					splitLine : {
						
						show : true,
						lineStyle : {
							color : 'rgba(144, 168, 252,0.1)',
							width : 1
						}
					},
					data : echarts_xaxisTime
				},{
					show:false,
					font : {
						color : '#fff'
					},
					position : 'left',//X 轴显示的方位
					type : 'category',
					 axisTick : {
							show : false
						},
					axisLabel : {
					   margin:20,
						textStyle : {
							align : 'center',
							color : 'rgba(144, 168, 252,0.4)',
							fontSize : 13
						}
					},
					axisLine : {
						lineStyle : {
							color : 'transparent'
						}
					},
					splitLine : {
						
						show : true,
						lineStyle : {
							color : 'rgba(144, 168, 252,0.1)',
							width : 1
						}
					},
					data : echarts_xaxisTime
				} ],
				xAxis : [{
					axisLabel : {
						textStyle : {
							color : 'rgba(144, 168, 252,0.4)',
							fontSize : 12
						}
					},
					
					nameLocation:'start',
					font : {
						color : '#666'
					},
					position : 'top',//X 轴显示的方位
					axisLine : {
						lineStyle : {
							color : 'transparent',
							width : 1
						}
					},
					splitLine : {
						show : true,
						lineStyle : {
							color : 'rgba(144, 168, 252,0.1)',
							width : 1
						}
					},
					type : 'value'
				},{
					axisLabel : {
						textStyle : {
							color : 'rgba(144, 168, 252,0.4)',
							fontSize : 12
						}
					},
					
					nameLocation:'start',
					font : {
						color : '#666'
					},
					position : 'top',//X 轴显示的方位
					axisLine : {
						lineStyle : {
							color : 'transparent',
							width : 1
						}
					},
					splitLine : {
						show : true,
						lineStyle : {
							color : 'rgba(144, 168, 252,0.1)',
							width : 1
						}
					},
					type : 'value'
				}],
				series : [
				 {
					barWidth : 15,
					name : '发电小时数',
					type : 'bar',
					xAxisIndex : 1,
					itemStyle : {
						normal : {
							color : function(params) {
								return '#4a8bca'
							}
						}
					},
					data : echarts_generatingPowerHours
				},{
					barWidth : 15,
					yAxisIndex : 1,
					name : '发电小时数',
					xAxisIndex : 1,
					type : 'bar',
					itemStyle : {
						normal : {
							color : function(params) {
								return '#4a8bca'
							}
						}
					},
					data : echarts_generatingPowerHours
				},
				 {
					name : '实发电量' ,
					type : 'bar',
					barWidth :15,
					itemStyle : {
						normal : {
							color : function(params) {
								return '#ff9a00'
							}
						}
					},
					data :echarts_realGeneratingPower
				},{
					name : '应发电量',
					z:1,
					type : 'bar',
					yAxisIndex : 1,
					barWidth :15,
					itemStyle : {
						normal : {
							color : function(params) {
								return '#ffc700'
							}
						}
					},
					data :echarts_predictGeneratingPower
				}]
			}
			myChart.setOption(option);
	}
</script>
		